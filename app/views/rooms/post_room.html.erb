

<div class="container-field">
  <div class="row">

<%= render "devise/shared/user_nav" %>

<div class="col-lg-8">

  <%= flash[:notice] %>

    <h2>登録済みROOM一覧</h2>
  
    <div>
   
    <table>
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>一泊</th>
          <th>登録日時</th>
        </tr>
      </thead>
  
      <tbody>
        <% @room.each do |room| %>
        <tr>
          <td><%= image_tag(room.room_img_url, class:'room-img') %></td>
          <td><%= room.room_name %></td>
          <td><%= room.room_introduction %></td>
          <td><%= room.price %></td>
          <td><%= room.created_at %></td>
        </tr>
        <% end %>
      </tbody>
  
    </table>
  
    </div>
    

  