
<div class="container">
  <div class="device mx-auto">

    <!-- エラーメッセージ -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <h6>新しいアカウントを作成</h6>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class:"device-form" %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"device-form" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class:"device-form" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class:"device-form" %>
      </div>
      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class:"btn btn-primary" %>
      </div>
    <% end %>
    <div class="sign_in_up mt-3">
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_user_session_path, class:"text-decoration-none" %>
    </div>

  </div>
</div>
