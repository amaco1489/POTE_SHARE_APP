
<div class="container">
  <div class="session mx-auto">

    <h5>ログイン</h5>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"session-form" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class:"session-form" %>
    </div>
    <div class="actions mt-3">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
    <% end %>
    <div class="new-account mt-3">
      <%= link_to "新しいアカウントを作成", new_user_registration_path, class:"text-decoration-none" %>
    </div>
    
    <!-- <%= render "devise/shared/links" %> -->

  </div>
</div>
